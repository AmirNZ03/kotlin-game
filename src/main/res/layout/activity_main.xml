<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#0B6F2A">

    <Button
        android:id="@+id/runSim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run 100 Simulations"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/simOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simulation output"
        app:layout_constraintTop_toBottomOf="@id/runSim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hokm - interactive UI skeleton below"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/simOut"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
